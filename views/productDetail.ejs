<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QMC</title>

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/styles-tablet.css">
    <link rel="stylesheet" href="/css/styles-desktop.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>

    <header>

        <%- include("./parcials/header") %>


            <%- include("./parcials/nav") %>

    </header>

    <main>

        <article class="marginproductdetail">
            <section class="row ">
                <div class="col-sm-12 col-md-7 ">

                    <img src="<%= product.imagen1 %>" class="d-block w-100" alt=" <%= product.name %>">

                </div>

                <div class="col-md-5">
                    <div class="row">
                        <div>
                            <p class="fs-7 text-end">
                                <%= product.codigo %>
                            </p>
                        </div>
                        <div>
                            <h1 class="nombreProductDetail">
                                <%= product.name %>
                            </h1>
                        </div>
                        <% if(product.disc>0) { %>
                            <div class="row">
                                <p class="fs-6 col-7 precioTachado">
                                    $
                                    <%= product.precio %>
                                </p>
                                <p class="fs-6 col-3 descuento">
                                    <%= product.disc %> % Off
                                </p>
                            </div>
                            <div class="marginPrecio">
                                <p class="fs-2">
                                    $
                                    <%= (1 - (product.disc/100)) * product.precio %>
                                </p>
                            </div>
                            <% }else  { %>
                                <div class="marginPrecio">
                                    <p class="fs-2">
                                        $
                                        <%= product.precio %>
                                    </p>
                                </div>
                                <p class="fs-6 text-center text-danger">
                                    Producto en promoción</p>
                                <% } %>

                                    <div class="row">
                                        <i class="fas fa-shipping-fast camionProductDetail col-1"></i>
                                        <p class="fs-5 col-11"> Envios a todo el pais </p>
                                    </div>

                                    <div class="row">
                                        <i class="fas fa-shield-alt escudoProductDetail col-1 "></i>
                                        <p class="fs-5 col-11">Compra Protegida </p>
                                    </div>

                                    <div class="row">
                                        <i class="fas fa-clipboard-check stockProductDetail col-1 "></i>
                                        <p class="fs-5 col-11">Stock Disponible </p>
                                    </div>


                                    <div class="stock">
                                        <div class="text-start">
                                            <i class="fas fa-heart favoritos"></i>
                                        </div>

                                        <button type="button" class="btn btn-primary">+</button>
                                        <input type="number" placeholder="1">
                                        <button type="button" class="btn btn-primary">-</button>
                                    </div>


                                    <div class="row">
                                        <!--Botones-->
                                        <button type="button" class="btn btn-outline-success col-12">Comprar</button>
                                        <button type="button" class="btn btn-outline-primary col-12">Agregar <i
                                                                class="fas fa-shopping-cart"></i></button>

                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-outline-success col-12" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                            Consultas <i class="far fa-comment-dots"></i>
                                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title fs-3 text-center" id="exampleModalLabel">Medios De Comunicacion
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <a href="https://www.instagram.com/nico_agga/">
                                                            <button type="button" class="btn btn-outline-primary ">Instagram
                                                                                <i
                                                                                    class="fab fa-instagram"></i></button>
                                                        </a>
                                                        <a href="https://www.instagram.com/nico_agga/">
                                                            <button type="button" class="btn btn-success ">Whatsapp <i
                                                                                    class="fab fa-whatsapp"></i></button>
                                                        </a>
                                                        <a href="https://www.instagram.com/nico_agga/">
                                                            <button type="button" class="btn btn-info ">Telegram <i
                                                                                    class="fab fa-telegram-plane"></i></button>
                                                        </a>
                                                        <a href="https://www.instagram.com/nico_agga/">
                                                            <button type="button" class="btn btn-danger ">E-Mail <i
                                                                                    class="fas fa-at"></i></button> </a>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                    </div>
                </div>

        </article>

        <div class="separador"></div>



        <article class="marginEspTecnicas shadowdesc">
            <div class="espTecnicas bg1 row">
                <div class="col-12 fs-6">
                    <p>Características:
                        <%= product.caract %>
                    </p>
                </div>
            </div>
            <div class="espTecnicas row">
                <div class="col-12 fs-6">
                    </p>Descripción:
                    <%= product.desc %>
                        </p>
                </div>
            </div>
            <div class="espTecnicas bg1 row">
                <div class="col-12 fs-6">
                    <p> Especificaciones:
                        <%= product.size %>
                    </p>
                </div>
            </div>
            <div class="espTecnicas  row">
                <div class="col-12 fs-6">
                    <p> Color:
                        <%= product.color %>
                    </p>
                </div>
            </div>
        </article>



        <div class="separador"></div>

        <div class="gradient-divider"></div>
        <h2 class="titulo">Productos en Descuento</h2>

        <section class="cont-art">

            <% for(prod of productShowOffer.slice(0,4)){ %>
                <% if(prod.type=="offer" ) { %>
                    <article class="discount-container">
                        <div class="car-prod-tot">
                            <div>
                                <a href="<%= prod.imagen1 %>"><img src="<%= prod.imagen1 %>" class="d-block w-100"
                                        style="width:250px; height:220px" alt="<%= prod.name %>"></a>
                            </div>

                        </div>
                        <div class="discount-badge">
                            <h6>30%</h6>
                        </div>
                        <div class="wrap-art">
                            <h4 class="cuotas">18 cuotas sin interes</h4>
                            <h4 class="descrip">
                                <%= prod.name %>
                            </h4>
                            <h3 class="precio">$
                                <%= prod.precio %>
                            </h3>
                            <div class="boton">
                                <a href="/products/productDetail/<%=prod.id%>">
                                    <button type="button" class="btn-prod">
                                        Ver producto
                                    </button>
                                </a>

                            </div>
                        </div>

                    </article>
                    <% } %>
                        <% } %>

        </section>





    </main>

    <%- include("parcials/footer") %>

</body>

</html>
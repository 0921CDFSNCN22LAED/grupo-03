<section class="cont-barra">
    <div class="wrap-barra-logo">
        <div class="menu">
            <i class="fas fa-bars"></i>
        </div>
        <div class="logo">
            <a href="/">
                <img src="/img/logo.svg" alt="">
            </a>
        </div>


    </div>

    <div class="wrap-barra-busc">
        <div class="buscador">

            <input type="text" class="barra-buscador" placeholder="  Buscar...">
            <button type="button" class="btn-buscar">
                        <i class="fas fa-search"></i>
                    </button>
            </form>
        </div>
    </div>

    <div class="wrap-barra-opc">
        <div class="lupa">
            <i class="fas fa-search"></i>
        </div>
        <% if(locals.user){ %> 
            <div class="usuario colorGradiant">
                <a href="/users/logout"><i class="fas fa-times"></i></a>
            </div>
        <% } %> 
        <% if(locals.user) { %> 
            <div class="usuario">
                <p class="nombre-usuario textousuario"><%= user.firstName %> </p>
            </div>
        <% } %> 
        <div class="usuario textousuario">
            <a href="/users/login"><i class="fas fa-user"></i></a>
        </div>

        <div class="carrito textousuario">
            <a href="/products/productCart" onmouseover="showCart(this)"><i class="fas fa-shopping-cart"></i></a>
            <p class="count-product">0</p>
        </div>



        <!-- ----------------------------------- -->

        <div class="cart-products" id="products-id">
            <p class="close-btn" onclick="closeBtn()">X</p>
            <h3>Mi carrito</h3>
            <div class="card-items">
                <div class="item">

                </div>
            </div>
            <h2>Total: <strong class="price-total">0</strong> $</h2>

            <div class="botonCompra">
                <a href="/products/productCart">
                    <button type="button" class="btn-prod">
                        Finalizar Compra
                    </button>
                </a>
            </div>
        </div>
         <!-- ----------------------------------- -->
         <script>
            function showCart(x){
                document.getElementById("products-id").style.display = "block";
            }
            function closeBtn(){
                 document.getElementById("products-id").style.display = "none";
            }
    
        </script>


        <script src="/js/Carrito.js" ></script>

</section>